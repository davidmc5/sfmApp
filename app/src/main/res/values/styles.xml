<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name = "SingleSwitches">
        <item name = "android:layout_width"> 240dp </item>
        <item name = "android:layout_height"> 50dp </item>
        <item name = "android:textSize"> 40dp </item>
        <item name = "android:layout_marginTop"> 10dp </item>
        <item name = "android:gravity"> center </item>
        <item name = "android:checked"> false </item>
        <item name = "android:scaleX"> 1.2 </item>
        <item name = "android:switchPadding">-20dp </item>
    </style>

    <style name="amps_textviews">
        <item name = "android:layout_width"> 94dp </item>
        <item name = "android:layout_height"> 50dp </item>
        <item name = "android:layout_marginEnd"> 0dp </item>
        <item name = "android:layout_marginStart"> 8dp </item>
        <item name = "android:gravity"> center </item>
        <item name = "android:text"> 0 A </item>
        <item name = "android:textAlignment"> center </item>
        <item name = "android:textSize"> 35dp </item>

    </style>


</resources>
